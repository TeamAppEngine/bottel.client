<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.appengine.adraaf.SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sign_up_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_email_activity_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#FFF">

            <EditText
                android:id="@+id/activity_sign_up_edit_text_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:singleLine="true" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_password_activity_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_email_activity_sign_up"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#FFF">

            <EditText
                android:id="@+id/activity_sign_up_edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:password="true"
                android:singleLine="true" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/activity_sign_up_text_view_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_password_activity_sign_up"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            android:background="@drawable/signup_oval"
            android:gravity="center"
            android:padding="20dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </RelativeLayout>


</RelativeLayout>
