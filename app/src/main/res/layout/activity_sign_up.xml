<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.appengine.adraaf.SignUpActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/signup_bg"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/activity_sign_up_text_view_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ثبت نام"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/signup_oval"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_margin="7dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"/>
    <EditText
        android:id="@+id/activity_sign_up_edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="رمز عبور"
        android:background="#d7d7d7"
        android:padding="20dp"
        android:layout_above="@id/activity_sign_up_text_view_register"
        android:layout_marginTop="3dp"
        android:password="true"
        android:gravity="right"/>

    <EditText
        android:id="@+id/activity_sign_up_edit_text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ایمیل"
        android:background="#d7d7d7"
        android:padding="20dp"
        android:layout_above="@id/activity_sign_up_edit_text_password"/>


</RelativeLayout>
