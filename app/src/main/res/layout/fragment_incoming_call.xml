<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view_title_activity_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#441266"
                android:gravity="center"
                android:padding="20dp"
                android:text="Incoming call"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_view_name_activity_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="left"
                android:padding="20dp"
                android:text="Language: English"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/image_view_circle_bg_activity_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/text_view_name_activity_call"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_icon_bg_ringing" />

            <ImageView
                android:id="@+id/image_view_user_activity_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/text_view_name_activity_call"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_icon_large" />

            <TextView
                android:id="@+id/text_view_time_activity_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_name_activity_call"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:padding="20dp"
                android:text="Some body from some where wants to talk to you about"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/end_call_bg"
                    android:text="REJECT" />

                <Button
                    android:id="@+id/button_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/answer_call_bg"
                    android:text="ACCEPT"
                    android:textColor="#FFF" />
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>