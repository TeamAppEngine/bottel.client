<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="io.bottel.views.AccountActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_username_activity_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFF"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/text_view_username_activity_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="#FFF"
            android:padding="15dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_about_me_activity_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFF"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/text_view_about_me_activity_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:hint="About me"
            android:background="#FFF"
            android:padding="15dp"
            android:inputType="textEmailAddress"
            android:gravity="top|left"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_languages_activity_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFF"
        android:layout_margin="10dp">
        <AutoCompleteTextView
            android:id="@+id/auto_complete_text_view_languages_activity_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select language"
            android:background="#FFF"
            android:padding="15dp"/>
    </android.support.v7.widget.CardView>
    <GridView
        android:id="@+id/grid_view_activity_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    </GridView>
</LinearLayout>
