<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="io.bottel.views.mapsActivity.MapsActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment  android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_activity_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        card_view:cardBackgroundColor="#FFFFFF">
        <RelativeLayout
            android:id="@+id/relative_layout_activity_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:id="@+id/auto_complete_text_view_activity_maps"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:background="#FFFFFF"/>
            <LinearLayout
                android:id="@+id/linear_layout_activity_maps"
                android:layout_width="match_parent"
                android:padding="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_below="@id/auto_complete_text_view_activity_maps">
                <ImageView
                    android:id="@+id/image_view_left_activity_maps"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_chevron_left_black_24dp"
                    android:padding="5dp"/>
                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager_activity_main"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                </android.support.v4.view.ViewPager>
                <ImageView
                    android:id="@+id/image_view_right_activity_maps"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:padding="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

